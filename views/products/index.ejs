
<% layout('layouts/boilerplate.ejs') %> 
  <%if(category==='All') {%> 
    <h1 class="text-center mb-3">All products here:</h1>
  <% } %>
   
  <div class="container"> 
    <% for (let product of products){%>
    <div class="card mb-3" >
        <div class="row">
            <div class="col-md-4">
                <img class="img-thumbnail w-100 h-100" alt="" src="<%=product.image%>">
            </div>
            <div class="col-md-8">
                <div class="card-body d-flex flex-column  align-items-start justify-content-end">
                    <h5 class="card-title"><%= product.name %> </h5>
                    <p class="card-text"><%= product.price %>$/kg</p>
                    <p class="card-text">
                        <small class="text-muted">Lorem ipsum dolor sit amet consectetur adipisicing elit. Fugiat repellendus quae cupiditate mollitia aspernatur reprehenderit nostrum deleniti voluptatum dolorem! Sed ipsum itaque numquam asperiores veritatis ullam sint quidem nemo deserunt?</small>
                    </p>
                    <a class="btn btn-primary" href="/products/<%=product._id%>">View <%=product.title%></a>
                </div>
            </div>
        </div>
    </div>
    <% }%>
    </div>