<% layout('layouts/boilerplate.ejs') %> 

        <div class="row">
            <div class="col-6 offset-3">
                <div class="card mb-3">
                    <img src="<%= product.image %>" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title"><%= product.name %></h5>
                    </div>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item text-muted"><a href="/products?category=<%=product.category %>"><%= product.category %></a></li>
                        <li class="list-group-item">$<%= product.price%>/kg</li>
                         <li class="list-group-item"><a href="/farms/<%= product.farm._id %>"><%= product.farm.name%></a></li> 
                    </ul>
                 
                </div>
            </div>
        </div>