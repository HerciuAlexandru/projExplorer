<% layout('layouts/boilerplate.ejs') %> 

        <div class="row">
            <div class="col-6 col-6">
                <div class="card mb-3">
                    <img src="<%= farm.image %>" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">Name:<%= farm.name %></h5>
                    </div>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item text-muted">City:<%= farm.city %></li>
                        <li class="list-group-item text-muted">Owner:<%= farm.admin.username %></li>

                        <li class="list-group-item">Email:<%= farm.email%></li>
                    </ul> 
                  
                    <ul class="list-group list-group-flush">
                        <h4 class="mx-3">Products:</h4>
                        <% for(let product of farm.products){ %> 
                         <li class="list-group-item"><a href="/products/<%= product._id %>"><%= product.name%></a></li>
                            <% } %> 
                    </ul>
                    <% if(currentUser && farm.admin.equals(currentUser._id)) {%> 
                    <div class="card-body">
                        <a class="card-link btn btn-info" href="/farms/<%= farm._id %>/edit">Edit Farm</a>
                        <form class="d-inline" action="/farms/<%=farm._id %>?_method=DELETE" method="POST">
                            <button class="btn btn-danger">Delete</button>
                        </form>
                    </div>
                    <% } %> 
                   
                    <div class="card-footer text-muted">
                        2 days ago
                    </div>
                </div>
            </div>
            <div class="col-6">
                <% if(currentUser) { %> 
                <form action="/farms/<%= farm._id %>/reviews" method="POST" class="mb-3 validated-form" novalidate>
                    <h3>Reviews:</h3>
                    <div class="mb-3">
                        <label class="form-label" for="rating">Rating</label>
                        <input class="form-range" type="range" min="1" max="5" id="rating" name="review[rating]">
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="body">Review</label>
                        <textarea class="form-control" name="review[body]" id="body" cols="30" rows="3" required></textarea>
                        <div class="valid-feedback">
                            Looks good!
                          </div>
                    </div>
                  
                    <button class="btn btn-success">Add review</button>
                </form>
                <% } %> 
                
                <% for(let review of farm.reviews) { %> 
                <div class="card mb-3">
                 <div class="mb-3 card-body">
                    <h5 class="card-title">Rating:<%= review.rating%> </h5>
                    <p class="card-subtitle mb-2 text-muted">by <%= review.author.username%> </p>

                    <p class="card-text"><%= review.body%> </p>
                    <% if(currentUser && review.author.equals(currentUser._id)) {%> 
                    <form action="/farms/<%= farm._id %>/reviews/<%= review._id %>?_method=DELETE" method="POST">
                    <button class="btn btn-sm btn-danger">Delete</button>
                </form>
                <% } %> 
                 </div>
            </div>
                <%  }%> 

            </div>
        </div>