<% layout('layouts/boilerplate.ejs') %>
<link rel="stylesheet" href="/stylesheets/stars.css">

        <div class="row">
            <div class="col-6 col-6">
                <div class="card mb-3">
                    <img src="<%= farm.image %>" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">Name:<%= farm.name %></h5>
                    </div>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item text-muted">City:<%= farm.city %></li>
                        <li class="list-group-item text-muted">Owner:<%= farm.admin.username %></li>

                        <li class="list-group-item">Email:<%= farm.email%></li>
                    </ul> 
                  
                    <ul class="list-group list-group-flush">
                        <h4 class="mx-3">Products:</h4>
                        <% for(let product of farm.products){ %> 
                         <li class="list-group-item"><a href="/products/<%= product._id %>"><%= product.name%></a></li>
                            <% } %> 
                    </ul>
                    <% if(currentUser && farm.admin.equals(currentUser._id)) {%> 
                    <div class="card-body">
                        <a class="card-link btn btn-info" href="/farms/<%= farm._id %>/edit">Edit Farm</a>
                        <form class="d-inline" action="/farms/<%=farm._id %>?_method=DELETE" method="POST">
                            <button class="btn btn-danger">Delete</button>
                        </form>
                    </div>
                    <% } %> 
                   
                    <div class="card-footer text-muted">
                        2 days ago
                    </div>
                </div>
            </div>
            <div class="col-6">
                <% if(currentUser) { %> 
                <form action="/farms/<%= farm._id %>/reviews" method="POST" class="mb-3 validated-form" novalidate>
                    <h3>Reviews:</h3>
                    <fieldset class="starability-basic">
                        <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
                        <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                        <label for="first-rate1" title="Terrible">1 star</label>
                        <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                        <label for="first-rate2" title="Not good">2 stars</label>
                        <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                        <label for="first-rate3" title="Average">3 stars</label>
                        <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                        <label for="first-rate4" title="Very good">4 stars</label>
                        <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                        <label for="first-rate5" title="Amazing">5 stars</label>
                      </fieldset>
                    <div class="mb-3">
                        <textarea class="form-control" name="review[body]" id="body" cols="30" rows="3" required></textarea>
                        <div class="valid-feedback">
                            Looks good!
                          </div>
                    </div>
                  
                    <button class="btn btn-success">Add review</button>
                </form>
                <% } %> 
                
                <% for(let review of farm.reviews) { %> 
                <div class="card mb-3">
                 <div class="mb-3 card-body">
                    <h5 class="card-title"><%= review.author.username%> </h5>
                    <p class="starability-result" data-rating="<%= review.rating %>"></p>
                    <!-- <p class="card-subtitle mb-2 text-muted">by <%= review.author.username%></p> -->
                    
                    <p class="card-text"><%= review.body%> </p>
                    <% if(currentUser && review.author.equals(currentUser._id)) {%> 
                    <form action="/farms/<%= farm._id %>/reviews/<%= review._id %>?_method=DELETE" method="POST">
                    <button class="btn btn-sm btn-danger">Delete</button>
                </form>
                <% } %> 
                 </div>
            </div>
                <%  }%> 

            </div>
        </div>